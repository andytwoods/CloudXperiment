/* Sticky footer styles
-------------------------------------------------- */

html,
body {
    height: 100%;
    /* The html and body elements cannot have any padding or margin. */
}

/* Wrapper for page content to push down footer */
#wrap {
    min-height: 100%;
    height: auto;
    /* Negative indent footer by its height */
    margin: 0 auto -60px;
    /* Pad bottom by footer height */
    padding: 0 0 60px;
}

/* Set the fixed height of the footer here */
#footer {
    height: 60px;
    background-color: #f5f5f5;
}

/* Custom page CSS
-------------------------------------------------- */
/* Not required for template or sticky footer method. */

#wrap > .container {
    padding: 60px 15px 0;
}

.container .text-muted {
    margin: 20px 0;
}

#footer > .container {
    padding-left: 15px;
    padding-right: 15px;
}

code {
    font-size: 80%;
}

/* Sign In modal styles
-------------------------------------------------- */
#signin_modal h4, #signup_modal h4 {
    text-align: center;
}

@media screen and (min-width: 768px) {
    #signin_modal .modal-dialog, #signup_modal .modal-dialog {
        width: 320px;
        margin-top: 60px;
    }
}

#signin_modal .modal-content, #signup_modal .modal-content {
    padding: 10px 20px 20px 20px;
}

#signin_modal .modal-body, #signup_modal .modal-body {
    padding: 0;
}

#signin_modal .socialaccount_providers, #signup_modal .socialaccount_providers {
    text-align: center;
}

#signin_modal .socialaccount_provider, #signup_modal .socialaccount_provider {
    width: 45px;
}

